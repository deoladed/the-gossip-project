<div>
	<% @lepotin.comments.each do |comment| %><br>
	<div class="card">
		<div class="card-header d-flex justify-content-between", style="background-color: #e9ecef;">
			<span>Commentaire de <%= comment.user.first_name %></span>
			<span class=''>Le <%= comment.created_at.to_s[0..-13] %></span>
		</div>
		<div class="card-body">
			<blockquote class="blockquote mb-0">
				<p><%= comment.content %></p>

				<div class="justify-content-between">
					<footer class='blockquote-footer d-flex align-self-start'>Un geek de THP - <cite title="Source Title"><%= comment.user.first_name %> <%= comment.user.last_name %></cite>
					</footer>
					<i class="fas fa-thumbs-up"></i> <p>ESSAYER EN METANT CLASSBLOQUOTE DANS P</p>
				</div>

			</blockquote>
		</div>
	</div>
	<% end %>      
</div>









